<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SugestorDeCurso" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">#bff9ff</item>
        <item name="colorSecondary">#2a058c</item>
        <item name="colorOnBackground">#139796</item>
        <item name="android:windowBackground">#cde0ff</item>
        <item name="android:textColorPrimary">#000000</item>
    </style>

    <style name="Widget.Custom.RoundedButton" parent="Widget.Material3.Button">
        <item name="cornerRadius">10dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/secondary</item>
    </style>
    
    <style name="TextInputLayout">
        <item name="hintTextColor">@color/black</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">3dp</item>
        <item name="boxStrokeColor">@color/custom_outline_color</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
    </style>

    <style name="CustomNavBar">
        <item name="android:background">@color/NavBar</item>
        <item name="itemIconTint">@color/nav_item_color</item>
        <item name="itemTextColor">@color/nav_item_color</item>
        <item name="itemRippleColor">@android:color/transparent</item>
        <item name="itemBackground">@drawable/bottom_nav_item_selector</item>
    </style>


    <style name="Theme.SugestorDeCurso" parent="Base.Theme.SugestorDeCurso" />
</resources>