<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Item selecionado -->
    <item android:state_checked="true">
        <layer-list>
            <!-- Barrinha no topo -->
            <item
                android:top="0dp"
                android:height="4dp"
                android:gravity="top">
                <shape android:shape="rectangle">
                    <solid android:color="@color/black" />
                </shape>
            </item>
            <!-- Fundo transparente (sem oval!) -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Item nÃ£o selecionado: fundo transparente -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</selector>
